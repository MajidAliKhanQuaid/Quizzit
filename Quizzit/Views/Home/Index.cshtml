@model IEnumerable<Quizzit.ViewModel.SummaryVM>

@if (Model.Count() == 0)
{
    <h4>You've not answered any questions as yet !</h4>
}
else
{
    for (var i = 0; i < Model.Count(); i++)
    {
        <div class="panel panel-default">
            <div class="panel-heading"><span class="qaLabel">Question # @(i + 1)</span> @Model.ElementAt(i).Question</div>
            <div class="panel-body"><span class="qaLabel">Answer</span> @Model.ElementAt(i).Answer</div>
        </div>
    }
}

<script>
    var btn = "<button class=\"btn btn-primary btnStartQuizz\">Start Quizz</button>";
    $(".logoRowLastCol").html(btn);
    $(".btnStartQuizz").click(function () {
        window.location.href = "/Home/Startup";
    });
</script>


<style>
    .qaLabel {
        display: inline-block;
        width: 130px;
        padding: 5px;
        border-radius: 1%;
        margin-right: 5px;
        font-size: 15px;
        font-weight: bold;
    }

    .panel > .panel-heading {
        background-image: none;
        background-color: white !important;
        color: black;
    }
</style>

<script src="~/Scripts/quizzit/_disablebrowserback.js"></script>